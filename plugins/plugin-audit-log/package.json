{
  "name": "@arka/plugin-audit-log",
  "version": "0.1.0",
  "description": "Audit trail and evidence logging plugin for ARKA Protocol",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": ["dist"],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "clean": "rm -rf dist",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "dependencies": {
    "@arka/types": "workspace:*",
    "@arka/utils": "workspace:*",
    "@arka/plugin-sdk": "workspace:*"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/pg": "^8.10.9",
    "typescript": "^5.3.2",
    "vitest": "^1.0.0"
  },
  "peerDependencies": {
    "@arka/core": "workspace:*"
  },
  "optionalDependencies": {
    "pg": "^8.11.3"
  }
}
